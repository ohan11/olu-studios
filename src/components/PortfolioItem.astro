---
import ProtectedImage from './ProtectedImage.astro';

interface Props {
  title: string;
  description?: string;
  images: string[];
  link?: string;
}

const { title, description, images, link } = Astro.props;
const mainImage = images[0] || '';
---

{link ? (
  <a href={link} class="portfolio-item">
    <div class="portfolio-image">
      <ProtectedImage src={mainImage} alt={title} width="100%" height="100%" />
    </div>
    <div class="portfolio-info">
      <h3 class="portfolio-title">{title}</h3>
      {description && <p class="portfolio-description">{description}</p>}
    </div>
  </a>
) : (
  <div class="portfolio-item">
    <div class="portfolio-image">
      <ProtectedImage src={mainImage} alt={title} width="100%" height="100%" />
    </div>
    <div class="portfolio-info">
      <h3 class="portfolio-title">{title}</h3>
      {description && <p class="portfolio-description">{description}</p>}
    </div>
  </div>
)}

<style>
  .portfolio-item {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: var(--text-dark);
    background: var(--bg-white);
    transition: transform 0.2s ease;
  }
  
  .portfolio-item:hover {
    transform: translateY(-4px);
  }
  
  .portfolio-image {
    width: 100%;
    aspect-ratio: 1;
    overflow: hidden;
    background: var(--bg-light);
  }
  
  .portfolio-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .portfolio-info {
    padding: 16px 0;
  }
  
  .portfolio-title {
    font-size: 16px;
    font-weight: 500;
    margin-bottom: 8px;
    color: var(--text-dark);
  }
  
  .portfolio-description {
    font-size: 14px;
    color: var(--text-light);
    margin: 0;
  }
</style>

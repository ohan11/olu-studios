---
import Layout from '../../layouts/Layout.astro';
import ShopifyCollection from '../../components/ShopifyCollection.astro';

const storeDomain = '8ygcdj-p0.myshopify.com';
const airlinesCollectionId = '325295505580';

// Custom styling for Olu Airlines collection (pink/coral theme)
const airlinesOptions = {
  product: {
    styles: {
      product: {
        '@media (min-width: 601px)': {
          'max-width': 'calc(33.33333% - 30px)',
          'margin-left': '30px',
          'margin-bottom': '50px',
          'width': 'calc(33.33333% - 30px)'
        },
        'text-align': 'left',
        img: {
          height: 'calc(100% - 15px)',
          position: 'absolute',
          left: '0',
          right: '0',
          top: '0'
        },
        imgWrapper: {
          'padding-top': 'calc(75% + 15px)',
          position: 'relative',
          height: '0'
        }
      },
      button: {
        color: '#793939',
        'background-color': '#ed9494',
        ':hover': {
          color: '#793939',
          'background-color': '#d58585'
        },
        ':focus': {
          'background-color': '#d58585'
        },
        'border-radius': '20px',
        'padding-left': '47px',
        'padding-right': '47px'
      }
    },
    buttonDestination: 'modal',
    contents: {
      button: false,
      options: false
    },
    isButton: true,
    text: {
      button: 'View '
    }
  },
  productSet: {
    styles: {
      products: {
        '@media (min-width: 601px)': {
          'margin-left': '-30px'
        }
      }
    }
  },
  modalProduct: {
    contents: {
      img: false,
      imgWithCarousel: true,
      button: false,
      buttonWithQuantity: true
    },
    styles: {
      product: {
        '@media (min-width: 601px)': {
          'max-width': '100%',
          'margin-left': '0px',
          'margin-bottom': '0px'
        }
      },
      button: {
        color: '#793939',
        'background-color': '#ed9494',
        ':hover': {
          color: '#793939',
          'background-color': '#d58585'
        },
        ':focus': {
          'background-color': '#d58585'
        },
        'border-radius': '20px',
        'padding-left': '47px',
        'padding-right': '47px'
      }
    },
    text: {
      button: 'Add to cart'
    }
  },
  option: {},
  cart: {
    styles: {
      button: {
        color: '#793939',
        'background-color': '#ed9494',
        ':hover': {
          color: '#793939',
          'background-color': '#d58585'
        },
        ':focus': {
          'background-color': '#d58585'
        },
        'border-radius': '20px'
      }
    },
    text: {
      total: 'Subtotal',
      button: 'Checkout'
    }
  },
  toggle: {
    styles: {
      toggle: {
        'background-color': '#ed9494',
        ':hover': {
          'background-color': '#d58585'
        },
        ':focus': {
          'background-color': '#d58585'
        }
      },
      count: {
        color: '#793939',
        ':hover': {
          color: '#793939'
        }
      },
      iconPath: {
        fill: '#793939'
      }
    }
  }
};
---

<Layout title="olu airlines - olu studios">
  <div class="shop-page">
    <div class="container">
      <h1 class="page-title">Olu Airlines</h1>
      {airlinesCollectionId && storeDomain ? (
        <ShopifyCollection 
          collectionId={airlinesCollectionId} 
          storeDomain={storeDomain} 
          options={airlinesOptions}
        />
      ) : (
        <p class="no-collection">Collection not configured. Please set SHOPIFY_AIRLINES_COLLECTION_ID in your .env file.</p>
      )}
    </div>
  </div>
</Layout>

<style>
  .shop-page {
    padding: 60px 0;
    min-height: calc(100vh - 300px);
  }

  .page-title {
    font-size: 48px;
    font-weight: 700;
    margin-bottom: 40px;
    color: var(--text-dark);
  }

  .no-collection {
    text-align: center;
    padding: 60px 20px;
    color: var(--text-light);
  }

  @media (max-width: 768px) {
    .shop-page {
      padding: 40px 0;
    }

    .page-title {
      font-size: 36px;
      margin-bottom: 32px;
    }
  }
</style>

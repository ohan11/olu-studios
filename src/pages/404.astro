---
import Layout from '../layouts/Layout.astro';
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
---

<Layout title="404 - olu studios">
  <div class="not-found">
    <div class="container">
      <h1>404</h1>
      <p>this page doesn't exist.</p>
      <a href={`${base}/`} class="back-link">back to home</a>
    </div>
  </div>
</Layout>

<style>
  .not-found {
    min-height: calc(100vh - 300px);
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  h1 {
    font-size: 96px;
    font-weight: 700;
    color: var(--text-dark);
    margin-bottom: 16px;
    line-height: 1;
  }

  p {
    font-size: 20px;
    color: var(--text-light);
    margin-bottom: 32px;
  }

  .back-link {
    display: inline-block;
    font-size: 16px;
    color: var(--hot-pink);
    text-decoration: underline;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--hot-pink-dark);
  }
</style>
